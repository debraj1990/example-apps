<div class="card card-default">
    <div class="card-header">All Products</div>
    <div class="card-body">
        <table class="table table-sm table-bordered">
            <tbody>
                {{#each products}}
                <tr></tr>
                <td>{{name}}</td>
                <td>&#8377;{{price}}</td>
                <td>{{description}}</td>
                {{#if ../user}}
                    <td><a>Edit</a></td>
                    <td><a href="products/{{id}}?action=delete">Delete</a></td>
                {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>